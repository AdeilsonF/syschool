<%= simple_form_for ([@school, @school.courses.build ]) do |f| %>
  <%= f.error_notification %>
  
  <%= f.input :title %>
  <%= f.input :description, as: :text %>
  <%= f.input :content, as: :text %>
  <%= f.input :price, as: :decimal %>
  <%= f.input :duration %>
  <%= f.submit 'Criar' %>
<% end %>
